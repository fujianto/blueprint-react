{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
          "./src/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
